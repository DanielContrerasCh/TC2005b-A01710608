<body class="has-background-link-light">
    <section class="section">
      <div class="container">
        <h1 class="title">Este es tu top de artistas</h1>
        <div class="columns">
          <% for (let artista of lista) { %>

            <div class="column">
                <div class="card">
                    <div class="card-image">
                    <figure class="image is-4by3">
                        <img src="<%= artista.imagen %>" alt="Placeholder image">
                    </figure>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-l eft">
                                <figure class="image is-48x48">
                                    <img src="<%= artista.imagen %>" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <p class="title is-4">
                                    <%= artista.nombre %>
                                </p>
                            </div>

                            <div class="content">
                                <%= artista.descripcion %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

        </div>
    </section>
